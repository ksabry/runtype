{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"strictNullChecks": true,
		"sourceMap": true,
		"target": "es2020",
		"baseUrl": "./",
		"outDir": "dist",
		"types": [
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"source",
	],
}
